#!/bin/bash -e
echo " ===> Installing node 7.10..."
set -x
# setup
#apk update
#apk add go

# download artifacts
curl -sS https://nodejs.org/dist/v7.10.0/node-v7.10.0.tar.gz | tar -C /tmp -xz

# main install phase
pushd /tmp/node-v7.10.0
./configure
make
make install
popd

# install yarn
npm install -g yarn

# cleanup
#rm -r /tmp/node-v7.10.0
#apk del go
#rm -r /var/cache/apk/*
