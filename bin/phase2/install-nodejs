#!/bin/bash -e

VERSION=7.10.0

echo " ===> Installing NodeJS $VERSION..."
set -x
# setup
apk update
apk add python

# download artifacts
curl -sS "https://nodejs.org/dist/v$VERSION/node-v$VERSION.tar.xz" | tar -C /tmp -xJ

# main install phase
pushd "/tmp/node-v$VERSION"
./configure
make
make install
popd

# install yarn
npm install -g yarn

# cleanup
rm -r "/tmp/node-v$VERSION"
apk del python
rm -r /var/cache/apk/*
